<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TagSystemViewer.App"
             xmlns:local="using:TagSystemViewer"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

     <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceInclude Source="/Resources/Converters.axaml"/>
                 <ResourceInclude Source="/Resources/Hotkeys.axaml"/>
                 <ResourceInclude Source="/Resources/IntValues.axaml"/>
                 <ResourceInclude Source="/Resources/Brushes.axaml"/>
                 <ResourceInclude Source="/Resources/ToolTips.axaml"/>
             </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
     </Application.Resources>
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AsyncImageLoader.Avalonia/AdvancedImage.axaml" />
        <StyleInclude Source="/Views/Controls/WrapListBox.axaml"/>
        <StyleInclude Source="/Views/Controls/TagGrid.axaml"/>
        <StyleInclude Source="/Styles/Styles.axaml"/>
        
    </Application.Styles>
</Application>